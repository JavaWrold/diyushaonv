<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.itcast.entity.BookInfo" table="t_BookInfo">
		<id name="book_id" column="book_id">
			<generator class="native"></generator>
		</id>
		<property name="book_ISBN" column="book_ISBN" not-null="true"></property>
		<property name="book_title" column="book_title" not-null="true"></property>
		<property name="book_author" column="book_author" not-null="true"></property>
		<property name="book_publisher" column="book_publisher"
			not-null="true"></property>
		<property name="book_pubdate" column="book_pubdate" not-null="true"></property>
		<property name="book_price" column="book_price" not-null="true"></property>
		<property name="book_count" column="book_count" not-null="true"></property>
	</class>
</hibernate-mapping>