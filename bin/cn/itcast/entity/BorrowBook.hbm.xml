<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.itcast.entity.BorrowBook" table="t_BorrowBook">
		<id name="borrow_id" column="borrow_id">
			<generator class="native"></generator>
		</id>
		<property name="borrow_ISBN" column="borrow_ISBN" not-null="true"></property>
		<property name="borrow_name" column="borrow_name" not-null="true"></property>
		<property name="borrow_bookname" column="borrow_bookname"
			not-null="true"></property>
		<property name="borrow_date" column="borrow_date" not-null="true"></property>
	</class>
</hibernate-mapping>